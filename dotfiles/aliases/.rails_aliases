# Rails
alias reset='echo Resetting the Fraking db && echo dropping db && rake db:drop && echo creating db && rake db:create && echo migrating db  && rake db:migrate && echo seeding db && rake db:seed'

alias fuck_it='echo Resetting the Fraking db && echo dropping db && rake db:drop && echo creating db && rake db:create && echo migrating db  && rake db:migrate && echo seeding db && rake db:seed '

alias rr='rake routes'


alias seed='echo seeding db && rake db:seed'

alias rc='rails c'
alias rgm='rails generate model'
alias rn='rails new'
alias rs='rails s'

rails-help () {
  echo "Rails Aliases"
  echo
  echo "fuck_it= kill server, db:reset, rails s"
  echo "reset= rake db:reset"
  echo "seed= rake db:seed"
  echo  
  echo "rc   = rails c"
  echo "rgm  = rails generate model"
  echo "rn   = rails new"
  echo "rr   = rake routes"
  echo "rs   = rails s"
  echo
}